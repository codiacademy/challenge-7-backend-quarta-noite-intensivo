generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client-test"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_TEST")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER") 
  sales     Sale[]
  expenses  Expense[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Unit {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  sales     Sale[]
  expenses  Expense[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  expenses  Expense[]
  sales     Sale[]   @relation("CategorySales")
  createdAt DateTime @default(now())
}

model Sale {
  id         Int      @id @default(autoincrement())
  unitId     Int
  categoryId Int?
  userId     Int?
  clientName String?
  quantity   Int      @default(1)
  unitPrice  Float
  totalPrice Float
  date       DateTime

  unit       Unit       @relation(fields: [unitId], references: [id])
  category   Category?  @relation("CategorySales", fields: [categoryId], references: [id])
  user       User?      @relation(fields: [userId], references: [id])

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Expense {
  id         Int      @id @default(autoincrement())
  unitId     Int
  categoryId Int
  userId     Int?
  description String?
  amount     Float
  date       DateTime
  unit       Unit      @relation(fields: [unitId], references: [id])
  category   Category  @relation(fields: [categoryId], references: [id])
  user       User?     @relation(fields: [userId], references: [id])

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
